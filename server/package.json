{
  "type": "module",
  "scripts": {
    "dev": "nodemon -e js,hbs -w views -w src ./src/server.js",
    "migrate:make": "knex --knexfile ./knexfile.cjs migrate:make",
    "migrate:up": "knex --knexfile ./knexfile.cjs migrate:latest",
    "migrate:down": "knex --knexfile ./knexfile.cjs migrate:down",
    "test": "yarn test:lint && yarn test:ava",
    "test:lint": "cd ../ && yarn eslint ./server",
    "test:ava": "yarn prepare-test && yarn ava",
    "prepare-test": "rm -f /tmp/test-db.sqlite && NODE_ENV=test yarn migrate:up"
  },
  "nodemonConfig": {
    "execMap": {
      "js": "node -r dotenv/config"
    }
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "nodemon": "^2.0.13",
    "supertest": "^6.1.6"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "hbs": "^4.1.2",
    "knex": "^0.95.11",
    "mustache": "^4.2.0",
    "sqlite3": "^5.0.2"
  }
}
